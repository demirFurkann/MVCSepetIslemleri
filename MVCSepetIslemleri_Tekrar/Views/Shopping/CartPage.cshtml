@model CartPageVM

@{
    ViewBag.Title = "CartPage";
}
@Html.ActionLink("Alişverişe Devam", "ProductList", null, new { @class = "btn btn-primary" })

@if (ViewBag.SepetBos != null)
{
<h1 style="color:red">@ViewBag.SepetBos</h1>
}
else
{
    <div class="card card-body">
        Ödemeniz gereken Mevcut Tutar  => @Model.Cart.TotalPrice.... Siparişi onaylamak için tıklayınız..  
    </div>
    <table class=" table table-hover">
        <thead>
            <tr>
                <td>Urun İsmi</td>
                <td>Urun Fiyati</td>
                <td>Urun Adedi</td>
                <td>Ara Fiyat</td>
            </tr>

        </thead>
        <tbody >
            @foreach (MVCSepetIslemleri_Tekrar.CustomTools.CartItem item in Model.Cart.Sepetim)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Amount</td>
                    <td>@item.SubTotal</td>
                    <td> @Html.ActionLink("-", "DeleteFromCart", new {id = item.ID},new {@class="btn btn-primary"})</td>
                    <td>@Html.ActionLink("+","IncreaseAmount",new {id =item.ID}, new {@lcass= "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
}

